<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:layout="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.woowacourse.ody.presentation.notificationlog.NotificationLogViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.notificationlog.NotificationLogActivity">

        <include
            android:id="@+id/tb_log"
            layout="@layout/toolbar_log"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            layout:layout_constraintBottom_toTopOf="@+id/layout_meeting_info"
            layout:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_meeting_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_cream_downside_radius_30"
            android:elevation="8dp"
            layout:layout_constraintBottom_toTopOf="@+id/recyclerView"
            layout:layout_constraintTop_toBottomOf="@+id/tb_log">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout:layout_constraintEnd_toStartOf="@id/tv_meeting_date"
                layout:layout_constraintTop_toTopOf="@id/tv_meeting_date"
                layout:layout_constraintBottom_toBottomOf="@id/tv_meeting_date"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_watch" />
            <TextView
                android:id="@+id/tv_meeting_date"
                style="@style/pretendard_regular_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="14dp"
                layout:layout_constraintStart_toStartOf="parent"
                layout:layout_constraintTop_toTopOf="parent"
                tools:text="2024년 7월 11일 03시 00분" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location_on"
                layout:layout_constraintTop_toTopOf="@id/tv_meeting_position"
                layout:layout_constraintBottom_toBottomOf="@id/tv_meeting_position"
                layout:layout_constraintEnd_toStartOf="@id/tv_meeting_position"
                android:layout_marginEnd="8dp"
                />

            <TextView
                android:id="@+id/tv_meeting_position"
                style="@style/pretendard_regular_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                layout:layout_constraintStart_toStartOf="@id/tv_meeting_date"
                layout:layout_constraintTop_toBottomOf="@id/tv_meeting_date"
                tools:text="선릉 캠퍼스" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person"
                layout:layout_constraintTop_toTopOf="@id/tv_meeting_people"
                layout:layout_constraintBottom_toBottomOf="@id/tv_meeting_people"
                layout:layout_constraintEnd_toStartOf="@id/tv_meeting_people"
                android:layout_marginEnd="8dp"
                />
            <TextView
                android:id="@+id/tv_meeting_people"
                style="@style/pretendard_regular_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="14dp"
                layout:layout_constraintBottom_toBottomOf="parent"
                layout:layout_constraintStart_toStartOf="@id/tv_meeting_date"
                layout:layout_constraintTop_toBottomOf="@id/tv_meeting_position"
                tools:text="3명 / 올리브, 해음, 차람" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            layout:layout_constraintEnd_toEndOf="parent"
            layout:layout_constraintStart_toStartOf="parent"
            layout:layout_constraintTop_toBottomOf="@+id/layout_meeting_info"
            layout:layout_constraintVertical_chainStyle="packed"
            tools:itemCount="12"
            tools:listitem="@layout/item_notification_log" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
