<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_destination_front"
        style="@style/pretendard_bold_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="@string/destination_question_front"
        android:textColor="@color/purple_800"
        app:layout_constraintEnd_toStartOf="@id/tv_destination_back"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_destination_back"
        style="@style/pretendard_bold_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/destination_question_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/tv_destination_front"
        app:layout_constraintTop_toTopOf="@id/tv_destination_front" />

    <EditText
        android:id="@+id/et_destination"
        style="@style/edit_text_style"
        android:layout_marginTop="32dp"
        android:focusable="false"
        android:hint="@string/destination_question_hint"
        app:layout_constraintBottom_toTopOf="@id/tv_destination_information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_destination_front" />

    <TextView
        android:id="@+id/tv_destination_information"
        style="@style/pretendard_regular_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/destination_question_information"
        android:textColor="@color/purple_800"
        app:layout_constraintStart_toStartOf="@id/et_destination"
        app:layout_constraintTop_toBottomOf="@id/et_destination" />

</androidx.constraintlayout.widget.ConstraintLayout>
