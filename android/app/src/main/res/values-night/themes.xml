<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Ody" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/cream</item>
        <item name="android:windowBackground">@color/cream</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Ody" parent="Base.Theme.Ody" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/cream</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_ody</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Ody</item>
    </style>
</resources>